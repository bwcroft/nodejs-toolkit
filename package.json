{
  "name": "nodejs-toolkit",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "unrs-resolver"
    ]
  },
  "scripts": {
